issn = {00295493},
journal = {Nuclear Engineering and Design},
pages = {406--412},
publisher = {Elsevier B.V.},
title = {{Interaction of a light gas stratified layer with an air jet coming from below: Large scale experiments and scaling issues}},
url = {http://dx.doi.org/10.1016/j.nucengdes.2012.10.009},
volume = {253},
year = {2012}
