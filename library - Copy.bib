@article{Clamens2018,
abstract = {CABRI is an experimental pulse reactor, funded by the French Nuclear Safety and Radioprotection Institute (IRSN) and operated by CEA at the Cadarache research center. It is designed to study fuel behavior under RIA conditions. In order to produce the power transients, reactivity is injected by depressurization of a neutron absorber (3He) situated in transient rods inside the reactor core. The shapes of power transients depend on the total amount of reactivity injected and on the injection speed. The injected reactivity can be calculated by conversion of the 3He gas density into units of reactivity. So, it is of upmost importance to properly master gas density evolution in transient rods during a power transient. The 3He depressurization was studied by CFD calculations and completed with measurements using pressure transducers. The CFD calculations show that the density evolution is slower than the pressure drop. Surrogate models were built based on CFD calculations and validated against preliminary tests in the CABRI transient system. Studies also show that it is harder to predict the depressurization during the power transients because of neutron/3He capture reactions that induce a gas heating. This phenomenon can be studied by a multiphysics approach based on reaction rate calculation thanks to Monte Carlo code and study the resulting heating effect with the validated CFD simulation.},
author = {Clamens, Olivier and Lecerf, Johann and Hudelot, Jean Pascal and Duc, Bertrand and Cadiou, Thierry and Blaise, Patrick and Biard, Bruno},
doi = {10.1051/epjconf/201817004005},
file = {:C\:/Users/Austin/Documents/OSU/Lit Review/CABRI/Clamens_ANIMMA-2018.pdf:pdf},
issn = {2100014X},
journal = {EPJ Web of Conferences},
keywords = {3He depressurization,CABRI,CFD,TOP effect},
pages = {2017--2019},
title = {{Assessment of the 3He pressure inside the CABRI transient rods - Development of a surrogate model based on measurements and complementary CFD calculations}},
volume = {170},
year = {2018}
}
